<div class="container-fluid profile">
  <div class="row">
    <div class="col-sm-12">
      <h1>Profile</h1>
    </div>
  </div>
  <div class="row profile-headers">
    <div class="col-xs-4">
      <a href="/profile/route"><h2>Routes</h2></a>
    </div>
    <div class="col-xs-4">
      <a href="/profile/farm"><h2>Farms</h2></a>
    </div>
    <div class="col-xs-4">
      <h2 class="active">Account</h2>
    </div>
  </div>
  <div class="row profile-content">
    <div class="col-sm-12">
      <div class="profile-card">
        <img src="/images/profile.png" alt="">
        <h3>USERNAME</h3>
        <p><%= user.username %></p>
        <h3>EMAIL</h3>
        <p><%= user.email %></p>
      </div>
      <button type="submit" onclick="toggleProfileEdit()">Edit Profile</button>
    </div>
  </div>

  <div class="row profile-content-form hidden" id="profileEdit">
    <div class="col-sm-12">
    <h3>CHANGE ACCOUNT INFO</h3>
    <form action="/profile/me" method="PUT">
      <label for="name">Name</label>
      <input type="text" id="username" name="username" value="<%= user.username %>">

      <label for="email">Email</label>
      <input type="text" name="email" id="email" value="<%= user.email %>">

      <button type="submit">Update Profile</button>
    </form>
    </div>
  </div>

</div>

<script>
    function toggleProfileEdit() {
      var element = document.getElementById("profileEdit");
      element.classList.toggle("hidden");
      console.log('button clicked');
    }
</script>


